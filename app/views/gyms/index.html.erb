<% provide :head_tags do %>
    <script>
      ['DOMContentLoaded', 'turbolinks:load'].forEach( event => {
        document.addEventListener(event, function(){
          var myCoords = new google.maps.LatLng(25.7617, -80.1918);
          var mapOptions = {
            center: myCoords,
            zoom: 14
          };
          var map = new google.maps.Map(document.getElementById("map"), mapOptions);
        })
      })
    </script>
<% end %>

<header id= "resultheader" class="masthead" style="min-height: 230px;">
    <div class="my-0 text-uppercase animated zoomIn" id="resultmasthead">
      <h1 id="resultstext">Results</h1>
    </div>
</header>

<section class="search-box" id="gym-map-container">
    <div class="row">
      <div class="                                                                                                                                         v              vv                mvm                                                                                                                                         col-md-12 listing-block">
        <% @gyms.each_with_index do |gym, index| %>
          <div class="media">
            <%= image_tag gym["image_url"], class: 'yoga' %>
            <div class="media-body pl-3">
              <div class="title">
                <%= link_to gym["name"], gym["url"] %>
              </div>
            
              <div class="stats">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span>
                  <%#= link_to gym["display_phone"], "tel:#{gym['phone']" %>
                </span>
              </div>
              <div class="address"><%= gym["distance"] %></div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-7 mx-0 px-0" style="overflow:hidden">      
        <div id="map" style="height: 100%"></div>
      </div>


   <script script script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"></script>
   <script>
    $(function(){
      $('.listing-block').slimScroll({
        height: '500px'
      });
  });
  </script>
