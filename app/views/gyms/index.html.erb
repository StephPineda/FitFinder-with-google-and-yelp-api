<p id="notice"><%= notice %></p>

<h1>Gyms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone number</th>
      <th>Price in cents</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gyms.each do |gym| %>
      <tr>
        <td><%= gym.name %></td>
        <td><%= link_to gym.address, "http://maps.google.com/?q=#{gym.address}", target: '_blank' %></td>
        <td><%= link_to gym.phone_number, "tel:#{gym.phone_number}" %></td>
        <td><%= gym.price_in_cents %></td>
        <td><%= link_to 'Show', gym %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gym', new_gym_path %>

