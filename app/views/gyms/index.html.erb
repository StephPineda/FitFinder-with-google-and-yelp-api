<header id= "resultheader" class="masthead" style="min-height: 230px;">
    <div class="mx-auto my-0 text-uppercase animated zoomIn" id="resultmasthead">
      <h1>RESULTS</h1>
    </div>
</header>

<section class="search-box" id="gym-map-container">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 listing-block">
        <% @gyms.each_with_index do |gym, index| %>
        <div class="media">
          <div class="fav-box">
            <% if current_user %>
              <% @fave = Favorite.find_by(user_id: current_user.id, gym_id: gym.id) %>
              <% if @fave.present? %>
                <%= link_to "<i class='fas fa-heart'></i>".html_safe, favorite_path(id: @fave.id), method: 'delete', class: "", style: "color:red;" %>
              <% else %>
                <%= link_to "<i class='far fa-heart'></i>".html_safe, favorites_path(gym_id: gym.id), method: :post, class: '', style: "color:red;" %>
              <% end %>

            <%else%>
              <i class="far fa-heart"></i>
            <% end %>
          </div>
           <%= image_tag Gym::IMGS[index % Gym::IMGS.length], class: 'yoga' %>
          <div class="media-body pl-3">
            <div class="title"><%= link_to gym.name, gym %></div>
            <div class="price">$ <%= (gym.price_in_cents).round(2) %></div>
            <div class="stats">
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star"></span>
              <span class="fa fa-star"></span>
              <span><%= link_to gym.phone_number, "tel:#{gym.phone_number}"%></span>
            </div>
            <div class="address"><%= gym.address %></div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-md-7 map-box mx-0 px-0">
        <script src='https://api.tiles.mapbox.com/mapbox-gl-js/v1.0.0/mapbox-gl.js'></script>
        <link href='https://api.tiles.mapbox.com/mapbox-gl-js/v1.0.0/mapbox-gl.css' rel='stylesheet' />
        <%= react_component 'Map', props: {
                                            zipcode: params[:zipcode],
                                            searchTerm: params[:search_term]
                                          },
                                          prerender: false %>
      </div>
    </div>
  </section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"></script>
  <script>
    $(function(){
      $('.listing-block').slimScroll({
        height: '500px'
      });
  });
  </script>
