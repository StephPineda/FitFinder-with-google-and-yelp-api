<header>
<iframe width="1280" height="720" src="https://www.youtube.com/embed/9VlfxuMJxTw?autoplay=1&loop=1&mute=1&%color=white&iv_load_policy=3&playlist=9VlfxuMJxTw" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

    <div class="container h-100">
    <div class="d-flex h-100 text-center align-items-center">
    <div class="w-100 text-white"></div>
</header>
<section class="head">
  <div class="container"></div>
</section>
<hgroup class="mb20">
  <div class="lead">
   <strong class="lead"><%= @gyms.count %></strong>
    <%= 'result'.pluralize(@gyms.count) %> <%= @gyms.count == 1 ? 'was' : 'were' %> found for the search for
   <strong class="lead"><%= @terms %></strong>
  </div>
</hgroup>
<div class="clearfix"></div>
<section class="search-box">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 listing-block">
        <% @gyms.each_with_index do |gym, index| %>
        <div class="media">
          <div class="fav-box">
            <i class="far fa-heart"></i>
          </div>
           <%= image_tag Gym::IMGS[index % Gym::IMGS.length], class: 'yoga' %>
          <div class="media-body pl-3">
            <div class="title"><%= gym.name %></div>
            <div class="price">$ <%= (gym.price_in_cents / 100).round(2) %></div>
            <div class="stats">
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star checked"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <span><i class="fa fa-arrows-alt"></i><%= link_to gym.phone_number, "tel:#{gym.phone_number}"%></span>
            </div>
            <div class="address"><%= gym.address %></div>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-md-7 map-box mx-0 px-0">
        <iframe width="100%" height="495" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.co.uk/maps?f=q&source=s_q&hl=en&geocode=&815&sspn=8.047465,13.666992&ie=UTF8&hq=&hnear=15+Springfield+Way,+Hythe+CT21+5SH,+United+Kingdom&t=m&z=14&ll=51.077429,1.121722&output=embed"></iframe>
      </div>
    </div>
  </section>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jQuery-slimScroll/1.3.8/jquery.slimscroll.min.js"></script>
  <script>
    $(function(){
      $('.listing-block').slimScroll({
        height: '500px'
      });
  });
  </script>
