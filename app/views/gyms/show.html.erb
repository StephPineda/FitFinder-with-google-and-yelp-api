<div class="clearfix"></div>
<section class="search-box">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12 listing-block">
        <div id="gym-show">
          <div class="mediacal" >
            <div class="gym-label">
              <h1><%= @gym.name %></h1>
              <%= image_tag Gym::IMGS.sample, width:"300px" %>
            </div>
            <p>
              <strong>Address:</strong>
              <%= @gym.address %>
            </p>
            <p>
              <strong>Phone number:</strong>
              <%= @gym.phone_number %>
            </p>
            <p>
              $ <%= @gym.price_in_cents %>
            </p>
            <% if current_user %>
              <% if @fave %>
                <%= link_to "Remove from Favorites", favorite_path(id: @fave.id), method: 'delete', class: "btn btn-primary gym-show-button" %>
              <% else %>
                <%= form_with model: current_user.favorites.new, url: favorites_path do |f| %>
                  <%= f.hidden_field :user_id, value: current_user.id %>
                  <%= f.hidden_field :gym_id, value: @gym.id %>
                  <%= f.submit "Add to Favorites", class: "btn btn-primary gym-show-button" %>
                <% end %>
              <% end %>
            <% end %>
          </div>
          <div class="col-md-7 mx-0 px-0 calbox">
            <%= react_component 'Calendar', props: {gymId: @gym.id}, prerender: false %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
